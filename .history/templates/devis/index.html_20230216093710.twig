{% extends 'base2.html.twig' %}

{% block title %}Devis index{% endblock %}

{% block body %}
    <h1>Devis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>Description</th>
                <th>Etat</th>
                <th>Id_expert</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for devi in Devis %}
            <tr>
                <td>{{ devi.id }}</td>
                <td>{{ devi.montant }}</td>
                <td>{{ devi.description }}</td>
                <td>{{ devi.etat ? 'Yes' : 'No' }}</td>
                <td>{{ devi.idExpert }}</td>
                <td>
                    <a href="{{ path('app_devis_show', {'id': devi.id}) }}">show</a>
                    <a href="{{ path('app_devis_edit', {'id': devi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_devis_new') }}">Create new</a>
{% endblock %}
